#sudo yabai --load-sa

# Layout Options
yabai -m config layout                      bsp # Set the view to use BSP
yabai -m config focus_follows_mouse         autoraise

# Setup padding
yabai -m config top_padding                 10
yabai -m config bottom_padding              10
yabai -m config left_padding                10
yabai -m config right_padding               10
yabai -m config window_gap                  10

# Window Changes
yabai -m config window_opacity              off
yabai -m config active_window_opacity       1.0
yabai -m config normal_window_opacity       0.6

yabai -m config widnow_topmost              on
yabai -m config window_shadow               float

# Window Bordering
yabai -m config window_border_width         4
yabai -m config window_border_radius        12
yabai -m config window_border_blur          on
yabai -m config window_border_hidpi         on
yabai -m config window_border               on

# Window Animations
yabai -m config window_animation_duration   0.0
yabai -m config window_animation_frame_rate 60
yabai -m config window_opacity_duration     0.0
yabai -m config active_window_border_color  0xFFc4a7e7
yabai -m config normal_window_border_color  0x50ff946f

